@model Dive_Deep.ViewModels.ProductDetailsViewModel


<!-- Bootstrap 5 (hvis ikke allerede loaded i _Layout) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

<div class="container py-5">
    <div class="row">
        <!-- Product Images -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="https://images.unsplash.com/photo-1444881421460-d838c3b98f95?auto=format&fit=crop&w=1080&q=80"
                     class="card-img-top" alt="@Model.Representative.Brand">
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-3">
                            <img src="https://images.unsplash.com/photo-1434056886845-dac89ffe9b56?auto=format&fit=crop&w=300&q=80"
                                 class="img-thumbnail" alt="Thumb 1">
                        </div>
                        <div class="col-3">
                            <img src="https://images.unsplash.com/photo-1495857000853-fe46c8aefc30?auto=format&fit=crop&w=300&q=80"
                                 class="img-thumbnail" alt="Thumb 2">
                        </div>
                        <div class="col-3">
                            <img src="https://images.unsplash.com/photo-1451859757691-f318d641ab4d?auto=format&fit=crop&w=300&q=80"
                                 class="img-thumbnail" alt="Thumb 3">
                        </div>
                        <div class="col-3">
                            <img src="https://images.unsplash.com/photo-1490915785914-0af2806c22b6?auto=format&fit=crop&w=300&q=80"
                                 class="img-thumbnail" alt="Thumb 4">
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <!-- Product Details -->
        <div class="col-md-6">
            <h1 class="h2 mb-3">@Model.Representative.Brand</h1>

            <div class="mb-3">
                <span class="h6">@Model.Representative.PricePerDay,- kr. pr. dag</span>
            </div>

            @if (!string.IsNullOrEmpty(Model.RepresentativeSecondaryLabel))
            {
                <div class="mb-2">
                    <strong>@Model.RepresentativeSecondaryLabel:</strong> @Model.RepresentativeSecondaryValue
                </div>
            }


            <!--HERFRA-->
            <form method="post" class="mt-4">
                @if (Model.Representative is BCD)
                {
                    <div class="mb-3">
                        <label asp-for="SelectedProductId">Størrelse</label>
                        <select asp-for="SelectedProductId" asp-items="@(new SelectList(Model.Variants.OfType<BCD>(), "ProductId", "Sizes"))" class="form-select"></select>

                    </div>
                }
                else if (Model.Representative is DivingSuit)
                {
                    var ds = Model.Representative as DivingSuit;

                    <div class="mb-3">
                        <strong>Type:</strong> @ds.Type
                    </div>

                    <div class="mb-3">
                    <label asp-for="SelectedSize">Størrelse</label>
                    <select asp-for="SelectedSize" asp-items="@(new SelectList(Model.Sizes))" class="form-select"></select>

                    <label asp-for="SelectedGender">Køn</label>
                    <select asp-for="SelectedGender" asp-items="@(new SelectList(Model.Genders))" class="form-select"></select>

                    <label asp-for="SelectedThickness">Tykkelse (mm)</label>
                    <select asp-for="SelectedThickness" asp-items="@(new SelectList(Model.Thicknesses))" class="form-select">
                        <option value="">(Valgfri)</option>
                    </select>

                    </div>
                }
                else if (Model.Representative is Tank)
                {
                }
                else if (Model.Representative is RegulatorSet)
                {
                    var rs = Model.Representative as RegulatorSet;
                    <div class="mb-3">
                        <strong>2. Trin:</strong> @rs.SecondStep
                    </div>
                    <div class="mb-3">
                        <strong>Octopus:</strong> @rs.Octopus
                    </div>
                }
                else if (Model.Representative is MaskSnorkel)
                {
                    <div class="mb-3">
                        
                    </div>
                }
                else if (Model.Representative is Finns)
                {
                    <div class="mb-3">
                        <label asp-for="SelectedProductId">Størrelse</label>
                        <select asp-for="SelectedProductId" asp-items="@(new SelectList(Model.Variants.OfType<Finns>(), "ProductId", "Sizes"))" class="form-select"></select>
                    </div>
                }
                <button type="submit" class="btn btn-primary">Tilføj til kurv</button>
            </form>

            <!--HERTIL-->
            <!-- Quantity -->
            @*<div class="mb-4">
                <div class="d-flex align-items-center">
                    <label class="me-2">Antal:</label>
                    <select class="form-select w-auto">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                    </select>
                </div>
            </div>*@

            <!-- Actions -->

            

            <!-- Extra info -->
            @*<div class="mt-4">
                <div class="d-flex align-items-center mb-2">
                    <i class="fas fa-truck text-primary me-2"></i>
                    <span>Gratis levering ved køb over 500 kr</span>
                </div>
                <div class="d-flex align-items-center mb-2">
                    <i class="fas fa-undo text-primary me-2"></i>
                    <span>30 dages returret</span>
                </div>
                <div class="d-flex align-items-center">
                    <i class="fas fa-shield-alt text-primary me-2"></i>
                    <span>2 års garanti</span>
                </div>*@
        </div>
    </div>
</div>
